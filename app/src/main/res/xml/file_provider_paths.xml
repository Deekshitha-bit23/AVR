    <cache-path name="cache" path="." />
    
    <!-- Internal files directory -->
    <files-path name="files" path="." />
    
    <!-- External files directory - this is what we use for camera images -->
    <external-files-path name="external_files" path="." />
    
    <!-- External cache directory -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- Media directory for images -->
    <external-files-path name="media" path="Pictures/" />
    
    <!-- Additional paths for comprehensive coverage -->
    <files-path name="images" path="images/" />
    <cache-path name="temp" path="temp/" />
    <external-files-path name="camera" path="camera/" />
    
    <!-- Root cache path for direct access -->
    <cache-path name="." path="." />
</paths>